{
  "name": "hotmap",
  "version": "0.2.0",
  "description": "",
  "files": [
    "build",
    "lib",
    "CHANGELOG.md"
  ],
  "main": "lib/main.js",
  "scripts": {
    "rebuild": "rm -rf tsconfig.tsbuildinfo lib/ build/ && npm run build",
    "build": "npm run build-tsc && npm run build-webpack && npm run build-cp",
    "build-tsc": "tsc",
    "build-webpack": "webpack --mode production --config ./webpack.config.js",
    "build-cp": "cp src/*.css build/",
    "start": "concurrently -c 'green,blue,magenta' --names 'tsc,wpk,srv' --kill-others 'npm:watch-tsc' 'npm:watch-webpack' 'npm:serve'",
    "watch": "concurrently -c 'green,blue' --names 'tsc,wpk,' --kill-others 'npm:watch-tsc' 'npm:watch-webpack'",
    "watch-tsc": "tsc --watch --preserveWatchOutput --incremental",
    "watch-webpack": "webpack -w --mode development --stats minimal --config ./webpack.config.js",
    "serve": "http-server -p 7000",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "d3": "^7.8.5",
    "d3-selection-multi": "^1.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/d3-selection-multi": "^1.0.14",
    "concurrently": "^8.2.2",
    "extra-watch-webpack-plugin": "^1.0.3",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.8.0",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}